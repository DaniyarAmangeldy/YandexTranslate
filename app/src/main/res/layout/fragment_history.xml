<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="daniyaramangeldy.yandextranslate.ui.fragment.FragmentHistory">

        <android.support.v7.widget.SearchView
            android:id="@+id/bookmarks_search_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:searchIcon="@drawable/ic_swap_36dp" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/bookmarks_rv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/bookmarks_search_bar"
            android:overScrollMode="ifContentScrolls"
            />

        <TextView
            android:id="@+id/bookmarks_placeholder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/bookmarks_search_bar"
            android:layout_marginTop="8dp"
            android:textAlignment="center"
            android:textSize="16sp"
            android:visibility="gone"
            tools:text="@string/string.placeholder.history"
            />

    </RelativeLayout>


</layout>